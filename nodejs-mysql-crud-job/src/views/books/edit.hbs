<div class="container p-4">
    <a href="/books">
        <div class="btn btn btn-warning">Back</div>
    </a>
    <div class="row">
        <div class="col-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/books/edit/{{book.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Title" autofocus value="{{ book.title }}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="description" cols="30" rows="10" placeholder="Description" class="form-control">{{ book.description }}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">Edit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>